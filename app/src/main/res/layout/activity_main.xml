<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/splash"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo_pidie" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:text="SIMANJA PIDIE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/warnabg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="fill_horizontal">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:src="@drawable/gares"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.9dp"
            android:text="MASUK"
            android:textColor="@color/green"
            android:textSize="25dp"
            android:textStyle="bold" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:src="@drawable/gares"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bereh"
            android:gravity="center"
            android:padding="10dp">


            <EditText
                android:id="@+id/NIPTxt"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:background="@color/light_Grey"
                android:hint="NIP"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bereh"
            android:gravity="center"
            android:padding="10dp">


            <EditText
                android:id="@+id/passwordTxt"
                android:layout_width="290dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey" />

            <ImageView
                android:id="@+id/viewPassImg"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:src="@drawable/mata"/>

        </LinearLayout>

        <Button
            android:id="@+id/submitLoginBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/warnasubmit"
            android:hint="MASUK"
            android:textColorHint="@color/white"
            app:backgroundTint="#145F3E" />

        <TextView
            android:id="@+id/lupaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Lupa Password?" />

    </LinearLayout>
</LinearLayout>